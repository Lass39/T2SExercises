@model IEnumerable<MvcContainer.Models.Movimentacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Movimentacaos" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-route-sortOrder="@ViewData["Container"]">

                    @Html.DisplayNameFor(model => model.Container)
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["Navio"]">

                    @Html.DisplayNameFor(model => model.Navio)
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["TipoMovimentacao"]">

                    @Html.DisplayNameFor(model => model.TipoMovimentacao)
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["DataInicio"]">

                    @Html.DisplayNameFor(model => model.DataInicio)
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@ViewData["DataFim"]">

                    @Html.DisplayNameFor(model => model.DataFim)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Container.Nmr_control)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Navio.Nome_navio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMovimentacao.Tipo_movimentacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
